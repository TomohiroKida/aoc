#!/bin/bash

case $1 in
  make)
    [[ $# == 3 ]] && [[ ! -f y$2/day$3.py ]] && cp y$2/day00.py y$2/day$3.py
    ;;
  run)
    python3 aoc.py ${@:2}
    ;;
  test)
    [[ $# == 3 ]] && python3 -m unittest y$2.day$3
    [[ $# == 4 ]] && python3 -m unittest y$2.day$3.TestSolution.test_part$4
    ;;
  *)
    echo "$0 test [year] [day] [part]"
    echo "$0 run [year] [day] [part]"
    ;;
esac
